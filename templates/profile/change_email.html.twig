{% extends 'base.html.twig' %}

{% block title %}Имэйл солих{% endblock %}

{% block body %}
  <h2 style="margin:0 0 12px;">Имэйл солих</h2>

  <form method="post" action="{{ path('profile_email') }}" style="max-width:380px;">
    <label style="display:block;margin:6px 0 2px;">Одоогийн нууц үг</label>
    <input type="password" name="current_password" required style="width:100%;padding:8px;">

    <label style="display:block;margin:12px 0 2px;">Шинэ имэйл</label>
    <input type="email" name="new_email" required style="width:100%;padding:8px;">

    <input type="hidden" name="_token" value="{{ csrf_token('profile_email') }}">
    <button type="submit" style="margin-top:12px;">Хадгалах</button>
  </form>
{% endblock %}
