{% extends 'base.html.twig' %}

{% block title %}Нууц үг солих{% endblock %}

{% block body %}
  <h2 style="margin:0 0 12px;">Нууц үг солих</h2>

  <form method="post" action="{{ path('profile_password') }}" style="max-width:380px;">
    <label style="display:block;margin:6px 0 2px;">Одоогийн нууц үг</label>
    <input type="password" name="current_password" required style="width:100%;padding:8px;">

    <label style="display:block;margin:12px 0 2px;">Шинэ нууц үг</label>
    <input type="password" name="new_password" required style="width:100%;padding:8px;">

    <label style="display:block;margin:12px 0 2px;">Шинэ нууц үг (давт)</label>
    <input type="password" name="new_password_repeat" required style="width:100%;padding:8px;">

    <input type="hidden" name="_token" value="{{ csrf_token('profile_password') }}">
    <button type="submit" style="margin-top:12px;">Хадгалах</button>
  </form>
{% endblock %}
