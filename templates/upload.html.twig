{% extends 'base.html.twig' %}
{% block title %}Импорт{% endblock %}
{% block body %}
<h1>Импорт</h1>
<form action="/app/reports/bank/import" method="post" enctype="multipart/form-data">
  <p>
    <label>Данс:
      <select name="account" required>
        <option value="kass">Касс</option>
        <option value="hariltsah">Харилцах</option>
        <option value="busad">Бусад</option>
      </select>
    </label>
  </p>
  <p><input type="file" name="file" accept=".xlsx,.xls,.csv" required></p>
  <p>
    <label><input type="checkbox" name="delete_previous" value="1"> Өмнөх файлыг устгаад импортлох</label>
  </p>
  <p><button type="submit">Импорт хийх</button></p>
</form>
<p><a href="/app/reports/bank">← Меню руу буцах</a></p>
{% endblock %}
