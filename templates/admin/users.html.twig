{% extends 'base.html.twig' %}

{% block title %}Admin — Users{% endblock %}

{% block body %}
  <h2>Хэрэглэгчид</h2>
  <p style="margin:8px 0;"><a href="{{ path('admin_dashboard') }}">← Буцах</a></p>

  <table style="width:100%; border-collapse:collapse;">
    <thead>
      <tr style="text-align:left; border-bottom:1px solid #eee;">
        <th style="padding:8px;">Имэйл</th>
        <th style="padding:8px;">Roles</th>
        <th style="padding:8px;">Статус</th>
        <th style="padding:8px;">Бүртгэгдсэн</th>
      </tr>
    </thead>
    <tbody>
      {% for u in items %}
        <tr style="border-bottom:1px solid #f3f4f6;">
          <td style="padding:8px;">{{ u.email }}</td>
          <td style="padding:8px;">{{ u.roles|join(', ') }}</td>
          <td style="padding:8px;">{{ u.status }}</td>
          <td style="padding:8px;">{{ u.createdAt|date('Y-m-d H:i') }}</td>
        </tr>
      {% else %}
        <tr><td colspan="4" style="padding:8px; opacity:.7;">Хоосон.</td></tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
