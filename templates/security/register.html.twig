{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register · Microfin{% endblock %}

{% block body %}
  <h2 style="margin:0 0 12px;">Бүртгүүлэх</h2>

  {# Глобал формын алдааг тод харуулна #}
  {% if form_errors(form) is not empty %}
    <div style="padding:8px 12px;margin:8px 0;border:1px solid #fca5a5;background:#fef2f2;">
      {{ form_errors(form) }}
    </div>
  {% endif %}

  {{ form_start(form, { attr: { autocomplete: 'off', novalidate: 'novalidate' } }) }}

    {{ form_row(form.email, {
      label: 'Имэйл',
      attr: { placeholder: 'name@example.com' }
    }) }}

    {{ form_row(form.plainPassword, {
      label: 'Нууц үг',
      attr: { placeholder: '••••••••' }
    }) }}

    <button type="submit">Бүртгүүлэх</button>
  {{ form_end(form) }}

  <p style="margin-top:12px;">
    Аль хэдийн бүртгэлтэй? <a href="{{ path('app_login') }}">Нэвтрэх</a>
  </p>
{% endblock %}
