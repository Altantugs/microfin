{% extends 'base.html.twig' %}
{% block title %}Нууц үг шинэчлэх{% endblock %}
{% block body %}
  <h1>Нууц үг шинэчлэх</h1>

  {% for label, messages in app.flashes %}
    {% for m in messages %}
      <div class="flash-{{ label }}">{{ m }}</div>
    {% endfor %}
  {% endfor %}

  <form method="post" class="auth" style="max-width:360px">
    <label for="password">Шинэ нууц үг</label>
    <input id="password" name="password" type="password" placeholder="Шинэ нууц үг" aria-label="Шинэ нууц үг" autocomplete="new-password" required>

    <label for="password2">Давтаж оруулах</label>
    <input id="password2" name="password2" type="password" placeholder="Давтаж оруулах" aria-label="Давтаж оруулах" autocomplete="new-password" required>

    <button type="submit">Шинэчлэх</button>
  </form>

  <p style="margin-top:1rem">
    <a href="{{ path('app_login') }}">Нэвтрэх рүү буцах</a> · <a href="{{ path('public_home') }}">Нүүр</a>
  </p>
{% endblock %}
