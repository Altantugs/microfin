{% extends 'base.html.twig' %}

{% block title %}Нэвтрэх{% endblock %}

{% block body %}
  <h1>Нэвтрэх</h1>

  {% if error %}
    <div style="color:#b00;margin:8px 0;">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
  {% endif %}

  <form method="post" action="{{ path('login') }}" style="max-width:340px;">
    <label style="display:block;margin:6px 0 2px;">Имэйл</label>
    <input type="text" name="_username" value="{{ last_username }}" required autofocus style="width:100%;padding:8px;">

    <label style="display:block;margin:12px 0 2px;">Нууц үг</label>
    <input type="password" name="_password" required style="width:100%;padding:8px;">

    {# CSRF хамгаалалт (идэвхтэй байж болно) #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {# Remember me (14 хоног) #}
    <label style="display:flex;gap:6px;align-items:center;margin:8px 0;">
      <input type="checkbox" name="_remember_me" value="on">
      Намайг сана (14 хоног)
    </label>

    <button type="submit" style="margin-top:12px;">Нэвтрэх</button>
  </form>
{% endblock %}
