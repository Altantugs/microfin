{% extends 'base.html.twig' %}
{% block title %}Нууц үг мартсан уу?{% endblock %}
{% block body %}
  <h1>Нууц үг мартсан уу?</h1>

  {% for label, messages in app.flashes %}
    {% for m in messages %}
      <div class="flash-{{ label }}">{{ m }}</div>
    {% endfor %}
  {% endfor %}

  <form method="post" action="{{ path('forgot_password') }}" class="auth" style="max-width:360px">
    <label for="email">Имэйл</label>
    <input id="email" name="email" type="email" placeholder="Имэйл" aria-label="Имэйл" autocomplete="email" required>
    <button type="submit">Сэргээх линк илгээх</button>
  </form>

  <p style="margin-top:1rem">
    <a href="{{ path('app_login') }}">Нэвтрэх рүү буцах</a> · <a href="{{ path('public_home') }}">Нүүр</a>
  </p>
{% endblock %}
